{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "rootDirs": ["."],
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
